# =============================================================================
# Git Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# User (default - overridden by includeIf)
# -----------------------------------------------------------------------------
[user]
	name = Ömer Balyalı
	username = omerbalyali
	email = git@omerbalyali.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIBiyksY7Od101VMUBoTxWmqYKoiBdIlgtqCsHWUtF8tS

# -----------------------------------------------------------------------------
# Conditional Includes (directory-based config)
# -----------------------------------------------------------------------------
# Personal projects (default for home directory)
[includeIf "gitdir:~/"]
	path = ~/.gitconfig.personal

# Work projects (uncomment and create ~/.gitconfig.work when needed)
# [includeIf "gitdir:~/Development/Work/"]
# 	path = ~/.gitconfig.work

# -----------------------------------------------------------------------------
# Aliases
# -----------------------------------------------------------------------------
[alias]
	# Short forms
	a = add
	b = branch
	c = commit
	d = diff
	s = status
	sw = switch
	co = checkout

	# Logging
	l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lg = log --oneline --graph
	lgo = log --oneline
	last = log -1 HEAD --stat

	# Useful shortcuts
	unstage = reset HEAD --
	undo = reset --soft HEAD~1
	amend = commit --amend --no-edit

	# Branch management
	branches = branch -a
	remotes = remote -v

	# Stash
	stash-all = stash save --include-untracked

	# Show contributors
	contributors = shortlog --summary --numbered

# -----------------------------------------------------------------------------
# Core
# -----------------------------------------------------------------------------
[core]
	editor = code --wait
	excludesfile = ~/.gitignore_global
	pager = less -FRX
	autocrlf = input
	whitespace = trailing-space,space-before-tab

# -----------------------------------------------------------------------------
# Init
# -----------------------------------------------------------------------------
[init]
	defaultBranch = main

# -----------------------------------------------------------------------------
# Commit Signing (1Password SSH)
# -----------------------------------------------------------------------------
[commit]
	gpgsign = true

[gpg]
	format = ssh

[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

# -----------------------------------------------------------------------------
# Pull / Push
# -----------------------------------------------------------------------------
[pull]
	rebase = true

[push]
	default = current
	autoSetupRemote = true

# -----------------------------------------------------------------------------
# Fetch
# -----------------------------------------------------------------------------
[fetch]
	prune = true

# -----------------------------------------------------------------------------
# Diff
# -----------------------------------------------------------------------------
[diff]
	colorMoved = zebra

# -----------------------------------------------------------------------------
# Merge
# -----------------------------------------------------------------------------
[merge]
	conflictstyle = diff3

# -----------------------------------------------------------------------------
# Rerere (Reuse Recorded Resolution)
# -----------------------------------------------------------------------------
[rerere]
	enabled = true

# -----------------------------------------------------------------------------
# Colors
# -----------------------------------------------------------------------------
[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = red

# -----------------------------------------------------------------------------
# URL Shortcuts
# -----------------------------------------------------------------------------
[url "git@github.com:"]
	insteadOf = gh:

[url "git@github.com:omerbalyali/"]
	insteadOf = me:
